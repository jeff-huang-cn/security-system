<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webapp.security.core.mapper.SysWechatUserMapper">

    <resultMap id="BaseResultMap" type="com.webapp.security.core.entity.SysWechatUser">
        <id column="id" property="id"/>
        <result column="openid" property="openid"/>
        <result column="unionid" property="unionid"/>
        <result column="user_id" property="userId"/>
        <result column="nickname" property="nickname"/>
        <result column="headimgurl" property="headimgurl"/>
        <result column="access_token" property="accessToken"/>
        <result column="refresh_token" property="refreshToken"/>
        <result column="expires_at" property="expiresAt"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, openid, unionid, user_id, nickname, headimgurl,
        access_token, refresh_token, expires_at, create_time, update_time
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_wechat_user
        WHERE id = #{id}
    </select>

    <select id="selectByOpenid" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_wechat_user
        WHERE openid = #{openid}
    </select>

    <select id="selectByUnionid" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_wechat_user
        WHERE unionid = #{unionid}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_wechat_user
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.webapp.security.core.entity.SysWechatUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_wechat_user (
            openid, unionid, user_id, nickname, headimgurl,
            access_token, refresh_token, expires_at
        )
        VALUES (
            #{openid}, #{unionid}, #{userId}, #{nickname}, #{headimgurl},
            #{accessToken}, #{refreshToken}, #{expiresAt}
        )
    </insert>

    <update id="update" parameterType="com.webapp.security.core.entity.SysWechatUser">
        UPDATE sys_wechat_user
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="headimgurl != null">headimgurl = #{headimgurl},</if>
            <if test="accessToken != null">access_token = #{accessToken},</if>
            <if test="refreshToken != null">refresh_token = #{refreshToken},</if>
            <if test="expiresAt != null">expires_at = #{expiresAt},</if>
            <if test="unionid != null">unionid = #{unionid},</if>
        </set>
        WHERE openid = #{openid}
    </update>

    <delete id="deleteById">
        DELETE FROM sys_wechat_user
        WHERE id = #{id}
    </delete>

    <delete id="deleteByOpenid">
        DELETE FROM sys_wechat_user
        WHERE openid = #{openid}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM sys_wechat_user
        WHERE user_id = #{userId}
    </delete>
</mapper> 